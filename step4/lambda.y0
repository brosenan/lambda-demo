(ns lambda)

(all [v x]
     [:definition v x] =>
     (assert (lambda-expr x))
     (fact (lambda-expr v)))

(all [x]
     (lambda-expr x ! x "is not a valid lambda expression"))

(all [x]
     (lambda-expr [:expr x]) <-
     (lambda-expr x))

(all [v x]
     (lambda-expr [:lambda_abst v x]) <-
     (given (fact (lambda-expr v))
            (lambda-expr x)))

(all [f x]
     (lambda-expr [:func_application f x]) <-
     (lambda-expr f)
     (lambda-expr x))